{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/Ergonaut.sln"
      ],
      "problemMatcher": "$msCompile"
    },
    {
        "label": "start-otelcol",
        "type": "shell",
        "command": "just",
        "args": [
            "start-otelcol"
        ],
    },
    {
        "label": "start-kafka",
        "type": "shell",
        "command": "just",
        "args": [
            "start-kafka"
        ]
    },
    {
      "label": "start-api",
      "type": "shell",
      "command": "just",
      "args": [
        "api"
      ]
    },
    {
        "label": "sentinel-dependencies",
        "dependsOrder": "sequence",
        "dependsOn": ["build", "start-kafka", "start-otelcol"]
    }
  ],
}
