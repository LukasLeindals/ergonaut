@using System.Threading.Tasks
@using Ergonaut.App.Models
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using Ergonaut.Core.Models
@using Ergonaut.Core.Models.WorkItem

@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,.5);" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">New Work Item</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="CloseAsync"></button>
                </div>

                <EditForm Model="Form" FormName="create-work-item" OnValidSubmit="HandleValidSubmitAsync"
                    OnInvalidSubmit="HandleInvalidSubmitAsync">
                    <DataAnnotationsValidator />
                    <div class="modal-body">

                        <fieldset disabled="@IsSubmitting">
                            <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <InputText id="title" class="form-control" @bind-Value="Form.Title"
                                    @bind-Value:event="oninput" />
                                <ValidationMessage For="@(() => Form.Title)" />
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <InputTextArea id="description" class="form-control" rows="4" @bind-Value="Form.Description"
                                    @bind-Value:event="oninput" />
                                <ValidationMessage For="@(() => Form.Description)" />
                            </div>

                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label for="status" class="form-label">Status</label>
                                    <InputSelect id="status" class="form-select" @bind-Value="Form.Status">
                                        @foreach (var status in StatusOptions)
                                        {
                                            <option value="@status">@status</option>
                                        }
                                    </InputSelect>
                                </div>

                                <div class="col-md-4">
                                    <label for="priority" class="form-label">Priority</label>
                                    <InputSelect id="priority" class="form-select" @bind-Value="Form.Priority">
                                        <option value="">Not set</option>
                                        @foreach (var priority in PriorityOptions)
                                        {
                                            <option value="@priority">@priority</option>
                                        }
                                    </InputSelect>
                                </div>

                                <div class="mt-3">
                                    <label for="dueDate" class="form-label">Due Date</label>
                                    <div class="input-group">
                                        <InputDate TValue="DateTime?" id="dueDate" class="form-control"
                                            @bind-Value="Form.DueDate" />
                                        <button type="button" class="btn btn-outline-secondary" title="Clear due date"
                                            @onclick="ClearDueDate" disabled="@(Form.DueDate is null)">
                                            <i class="fa-solid fa-xmark"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>


                        </fieldset>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" @onclick="CloseAsync">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@IsSubmitting">Create</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public CreateWorkItemRequest Form { get; set; } = default!;
    [Parameter] public bool IsSubmitting { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
    [Parameter] public EventCallback<EditContext> OnInvalidSubmit { get; set; }

    protected override void OnParametersSet()
    {
        Form ??= new();
    }

    private Task CloseAsync() =>
        OnClose.HasDelegate ? OnClose.InvokeAsync(null) : Task.CompletedTask;

    private Task HandleValidSubmitAsync() =>
        OnValidSubmit.HasDelegate ? OnValidSubmit.InvokeAsync(null) : Task.CompletedTask;

    private Task HandleInvalidSubmitAsync(EditContext context) =>
        OnInvalidSubmit.HasDelegate ? OnInvalidSubmit.InvokeAsync(context) : Task.CompletedTask;

    private void ClearDueDate() => Form.DueDate = null;
    private static readonly WorkItemStatus[] StatusOptions = Enum.GetValues<WorkItemStatus>();
    private static readonly WorkItemPriority[] PriorityOptions = Enum.GetValues<WorkItemPriority>();
}
