@page "/projects"
@rendermode InteractiveServer
@attribute [StreamRendering]


<PageTitle>Projects</PageTitle>

<h1 class="mb-4">Projects</h1>

<button class="btn btn-primary" @onclick="ShowCreateModal">Create</button>


@if (_showCreateModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,.5);" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">New Project</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="HideCreateModal"></button>
                </div>

                <EditForm Model="_form" FormName="create-project" OnValidSubmit="CreateProjectAsync"
                    OnInvalidSubmit="HandleInvalidSubmit">
                    <DataAnnotationsValidator />
                    <div class="modal-body">
                        <input @bind-Value="_form.Title" @bind-Value:event="oninput" class="form-control"
                            placeholder="Project name" />
                        <ValidationSummary />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" @onclick="HideCreateModal">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@_isSubmitting">Create</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}


@if (!string.IsNullOrWhiteSpace(_errorMessage))
{
    <div class="alert alert-danger mt-3">@_errorMessage</div>
}

@if (_projects is null)
{
    <p class="mt-4"><em>Loading...</em></p>
}
else if (_projects.Count == 0)
{
    <p class="mt-4"><em>No projects yetâ€”create your first one above.</em></p>
}
else
{
    <ul class="list-group mt-4">
        @foreach (var project in _projects)
        {
            <li class="list-group-item d-flex justify-content-between">
                <span>@project.Title</span>
                <small class="text-muted">Created @project.CreatedAt.ToLocalTime()</small>
            </li>
        }
    </ul>
}
