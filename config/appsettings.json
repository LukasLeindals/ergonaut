{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Warning",
            "Microsoft.EntityFrameworkCore.Database.Command": "Error",
            "System.Net.Http.HttpClient": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Auth": {
        "Issuer": "Ergonaut",
        "Audience": "ErgonautClients",
        "AccessTokenTtlMinutes": 30,
        "RefreshTokenTtlDays": 14,
        "ServiceTokenTtlMinutes": 1440,
        "ServiceCredentials": {
            "Ergonaut.UI": {
                "Token": "",
                "Scopes": [
                    "projects:read",
                    "projects:write",
                    "workitems:read",
                    "workitems:write"
                ]
            },
            "Ergonaut.Sentinel": {
                "Token": "",
                "Scopes": [
                    "projects:read",
                    "projects:write",
                    "workitems:read",
                    "workitems:write"
                ]
            }
        }
    },
    "ConnectionStrings": {
        "Ergonaut": "Data Source=../../data/sqlite/ergonaut.db"
    },
    "Api": {
        "BaseUrl": "http://api:5075/",
        "Auth": {
            "Endpoint": "api/v1/auth/token",
            "ServiceToken": ""
        }
    },
    "LogIngestion": {
        "Kafka": {
            "BootstrapServers": "kafka:9092",
            "Topic": "ergonaut-logingestion",
            "GroupId": "ergonaut-log-event-consumer"
        },
        "TraceViewerBaseUrl": "http://jaeger:16686"
    },
    "Sentinel": {
        "ProjectName": "sentinel_project",
        "MinimumLevel": "Warning"
    }
}
